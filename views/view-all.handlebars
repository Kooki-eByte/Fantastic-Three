<nav class="blue-grey lighten-1" role="navigation">
    <div class="nav-wrapper container">
        <a class="navbar-brand" href="/members">
            Go back
        </a>
    </div>
</nav>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h4>Welcome to Your Food/Recipe Plan : <i><b><span class="member-name"></span></h2></i></b>
        </div>
    </div>
    <div class="row">
        <div class="show-BF col l3 m6 s12">
            <button data-name="breakfast" data-user={{id}} id="display" class="waves-effect waves-light btn">Display Breakfast Plans</button>
        </div>
        <div class="show-LN col l3 m6 s12">
            <a data-name="lunch" data-user={{id}} class="waves-effect waves-light btn"
                href="/api/meals/lunch?users_id={{id}}">Display Lunch Plans</a>
        </div>
        <div class="show-DN col l3 m6 s12">
            <button data-name="dinner" data-user={{id}} id="display" class="waves-effect waves-light btn">Display Dinner Plans</button>
        </div>
        <div class="show-SN col l3 m6 s12">
            <button data-name="snack" data-user={{id}} id="display" class="waves-effect waves-light btn">Display Snack Plans</button>
        </div>
    </div>
    <div class="row">
        {{#each meals }}
        <div class="col l4 m6 s12">
            <div class="card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src={{img}}>
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{name}}<i
                            class="material-icons right"></i></span>
                    <button data-name="breakfast" class="waves-effect waves-light btn delete-btn">Remove
                        Food</button>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Ingredients<i
                            class="material-icons right">close</i></span>
                    <ul>
                        <li>Ingredients 1</li>
                        <li>Ingredients 2</li>
                        <li>Ingredients 3</li>
                    </ul>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<script type="text/javascript" src="/js/view-all.js"></script>

